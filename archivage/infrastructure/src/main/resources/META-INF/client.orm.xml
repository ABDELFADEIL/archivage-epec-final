<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0"
                 xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">

    <description>Archivage domain module</description>

    <entity
            class="org.simplon.epec.archivage.domain.client.entity.Client"
            name="Client" access="FIELD">
        <table name="client" />

        <attributes>
            <id name="client_id">
                <column  name="client_id" length="55" />
            </id>
            <basic name="client_number">
                <column name="client_number" unique="true" updatable="false"  />
            </basic>
            <basic name="client_name">
                <column name="client_name" />
            </basic>
            <basic name="client_first_name">
                <column name="client_first_name" />
            </basic>
            <basic name="birth_date">
                <column name="birth_date" />
            </basic>
            <basic name="client_nature_id">
                <column name="client_nature_id" />
            </basic>
            <basic name="civility_id">
                <column name="civility_id" />
            </basic>
            <basic name="siren_number">
                <column name="siren_number" />
            </basic>
            <basic name="siret_number">
                <column name="siret_number" />
            </basic>
            <basic name="user_id">
                <column name="user_id" updatable="false" nullable="false"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>

