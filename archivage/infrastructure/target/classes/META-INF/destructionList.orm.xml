<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0"
                 xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">

    <description>Archivage domain module</description>

    <entity
            class="org.simplon.epec.archivage.domain.destructionList.entity.DestructionList"
            name="DestructionList" access="FIELD">
        <table name="destructionList" />
        <attributes>
            <id  name="destruction_id">
                <column name="destruction_id" length="55" />
            </id>
            <basic name="description">
                <column name="description" />
            </basic>
            <basic name="user_validate_id">
                <column name="user_validate_id"/>
            </basic>
            <basic name="validation">
                <column name="validation"  nullable="false" />
            </basic>
            <basic name="validation_date">
                <column name="validation_date" />
            </basic>

            <one-to-one name="document" fetch="LAZY"
                        target-entity="org.simplon.epec.archivage.domain.document.entity.DigitalDocument">
                <join-column  name="document" nullable="false" updatable="false"/>
                <cascade>
                    <cascade-all />
                </cascade>
            </one-to-one>
        </attributes>
    </entity>
</entity-mappings>

